{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Document Encoder",
  "version": "0.3.3",
  "identifier": "jp.ynr.docenc",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Document Encoder",
        "width": 1400,
        "height": 1200,
        "minWidth": 1200,
        "minHeight": 1000
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main",
          "description": "Main capability",
          "windows": ["main"],
          "permissions": [
            "dialog:default",
            "dialog:allow-message",
            "dialog:allow-ask",
            "dialog:allow-confirm",
            "dialog:allow-open",
            "dialog:allow-save",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "core:event:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../public/licenses.json"
    ],
    "macOS": {
      "hardenedRuntime": true,
      "entitlements": "./entitlements.plist",
      "exceptionDomain": null,
      "signingIdentity": "Developer ID Application: Masahiro Miyake (VE65YR6EQZ)",
      "providerShortName": "VE65YR6EQZ"
    }
  }
}
